
<%# WebAudioAPIでコントローラー作成 %>
<div class="bg-custom-audio-slider border border-secondary border-3 rounded-pill d-flex align-items-center w-<%= "#{slider_size}" %> py-2 px-4">
  <button type="button" id="<%= "#{slider_type}" %>-playback" class="btn btn-outline-danger border border-danger border-3 fst-italic me-2">Play</button>
  <button type="button" id="<%= "#{slider_type}" %>-stop" class="btn btn-outline-primary  border border-primary border-3 fst-italic me-3" disabled>Pause</button>
  <span id="<%= "#{slider_type}" %>-playback-time" class="text-white">0:00</span>
  <input id="<%= "#{slider_type}" %>-slider" class="ms-2" type="range" min="0" max="100" value="0" style="width: 80%;">
</div>
