
<%# WebAudioAPIでコントローラー作成 %>
<div class="js-audio-player-container bg-custom-audio-slider border border-secondary border-3 rounded-pill d-flex align-items-center w-<%= "#{slider_size}" %> py-2 px-4">
<%# binding.pry %>
  <% unless defined?(audio_blob) %>
    <button type="button" class="<%= "#{slider_type}" %>-playback btn btn-outline-danger border border-danger border-3 fst-italic me-2">Play</button>
  <% else %>
    <button type="button"
            class="<%= "#{slider_type}" %>-playback btn btn-outline-danger border border-danger border-3 fst-italic me-2"
            data-audio-url="<%= rails_blob_path(audio_blob, disposition: "attachment") %>">
      Play
    </button>
  <% end %>

  <button type="button" class="<%= "#{slider_type}" %>-stop btn btn-outline-primary border border-primary border-3 fst-italic me-3" disabled>Pause</button>
  <span class="<%= "#{slider_type}" %>-playback-time text-white">0:00</span>
  <input class="<%= "#{slider_type}" %>-slider ms-2" type="range" min="0" max="100" value="0" style="width: 80%;">
</div>
