<% content_for(:title,"パスワードリセット")%>
<div class="bg-dark bg-gradient bg-height text-white">
  <div class="container">
      <div class="row">
          <div class="mt-5 pt-5 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
              <%= render partial: 'layouts/flash' %>
              <h1>パスワードリセット</h1>
              <%= form_with model:@user,url:password_reset_path(@token),local: true do |f|%>
                  <%#=render "shared/error_messages",object: f.object%>
                  <div class="form-group mt-5 mb-3">
                      <%=f.label :email, "メールアドレス:"%>
                      <%=@user.email%>
                  </div>

                  <div class="form-group mb-3">
                      <%=f.label :password, "新しいパスワード:"%>
                      <%=f.password_field :password,class: "form-control"%>
                  </div>

                  <div class="form-group mb-3">
                      <%=f.label :password_confirmation, "パスワード確認:"%>
                      <%=f.password_field :password_confirmation,class: "form-control"%>
                  </div>
                  <%=f.submit "更新する",class:"btn btn-primary"%>
              <%end%>
          </div>
      </div>
  </div>
</div>

