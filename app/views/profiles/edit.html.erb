<div class="bkg-img-pro">
  <h1 class="text-white text-center ps-5 py-3 mb-5">プロフィール</h1>
  <div class="container">
    <div class="row">
      <%= render partial: 'layouts/flash' %>
      <div class="col-md-10 offset-md-1 mt-4">
        <div class="card bg-color-pro">
          <div class="card-body">
            <%= form_with model: @user, url: profile_path, local: true, class: "table mt-3 text-white" do |f| %>
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, class: "form-control mb-3" %>
                </div>
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control mb-3" %>
                </div>

                <div class="form-group">
                  <%= f.label :avatar %>
                  <%= f.file_field :avatar, class: "form-control", id: 'avatarImg', accept: 'image/*' %>
                  <%= f.hidden_field :avatar_cache %>
                  <div class='mt-3 mb-3'>
                    <%= image_tag @user.avatar.url, id: 'preview', size: '100x100', class: 'rounded-circle' %>
                  </div>
                </div>
                <%= f.submit  class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>

        <div class="d-flex justify-content-start">
        <%= link_to '戻る', profile_path, class: 'btn btn-success float-right' %>
        </div>

      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'preview.js' %>