<h1>posts#index</h1>

<div>
  <%= link_to "新規作成", new_post_path %>
</div>

<div>
  <p>投稿一覧</p>
  <% @posts.each do |post| %>
    <p>
      <%= post.title %>
      <%= post.body %>
      <% if post.voice.attached? %>
        <%= audio_tag(polymorphic_path(post.voice), controls: true) %>
        <%= audio_tag(url_for(post.voice), controls: true) %>
      <% end %>
    </p>
    <br>
  <% end %>
</div>
