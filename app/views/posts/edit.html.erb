
<div class="bkg-img-pro">
  <h1 class="text-white  text-left ps-5 py-3 mb-5 bg-dark bg-gradient">投稿画面</h1>
  <div class="container">
    <%= render partial: 'layouts/flash' %>
    <p class="text-white">投稿フォーム</p>
    <div>
      <%= audio_tag(url_for(@post.voice), id: "record", controls: true) %>
      <button type="button" class="btn btn-outline-secondary mb-3" id="playback">再生する</button>
    </div>

    <div>
      <%= form_with model: @post, local: true do |f| %>
        <div class="row">
          <div  class="mb-3">
            <%= f.label :title, class: "form-label text-white" %>
            <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
          </div>
          <div  class="mb-3">
            <%= f.label :body, class: "form-label text-white" %>
            <%= f.text_area :body, class: "form-control", rows: "3" %>
          </div>
          <div  class="mb-3">
            <%= f.label :status, class: "form-label text-white" %>
            <%= f.select :status, Post.statuses.keys.map {|k| [k, k]}, {}, { class: 'form-control', style: 'margin-bottom: 15px;', data: {} }  %>
          </div>
          <div>
            <%= f.submit nil, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

<%= javascript_pack_tag 'playback-audio' %>